<% layout("/layouts/boilerplate") %>
<body>
    <h2>All Listings</h2>
    <!-- <form method="GET" action="/listings/new">
    <button>Create new listing</button>
    </form> -->

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings){ %>
            <a class="card-container" href="/listings/<%=listing._id%>">
            <div class="card col" >
                <img src="<%=listing.image%>" class="card-img-top" alt="listing-img" style="height: 20rem;">
                <div class="card-body">
                    <p class="card-title"><%=listing.title%></p>
                    <p class="card-price">&#8377; <%= Number(listing.price).toLocaleString("en-IN", { style: 'currency', currency: 'INR' }).replace('â‚¹', '').trim() %>/night</p>

                
                </div>
              </div>
            </a>
        <%}%> 
    </div>
</body>